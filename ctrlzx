#!/bin/bash
clear
# Pastikan variabel COUNTDOWN_SECONDS sudah diatur (misalnya, di awal skrip atau dari input user)
# Contoh:
# COUNTDOWN_SECONDS=10 

# Mendefinisikan warna ANSI
GREEN='\033[0;32m'
RESET='\033[0m'

# Loop dari N hingga 1
for ((i=$COUNTDOWN_SECONDS; i>=1; i--)); do
    # Tampilkan angka hitungan mundur dengan warna hijau
    # \r (carriage return) mengembalikan kursor ke awal baris
    echo -ne "Sisa waktu: ${GREEN}$i${RESET} detik\r"
    sleep 1
done

# Pindah ke baris baru dan tampilkan pesan selesai
clear
python .settings/1.py