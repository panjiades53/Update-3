#!/bin/bash

# 1. Menangkap dan mengabaikan SIGINT (Ctrl + C)
trap '' SIGINT

# 2. Menangkap dan mengabaikan SIGTSTP (Ctrl + Z)
trap '' SIGTSTP

echo "Script dimulai. Sekarang, Ctrl + C dan Ctrl + Z akan diabaikan."
echo "Satu-satunya cara untuk menghentikannya adalah dengan menggunakan 'kill -9' dari sesi Termux lain."

# Loop tak terbatas
while true
do
    echo "Script berjalan stabil... Tekan Ctrl + C atau Ctrl + Z untuk mencoba (tidak akan berhenti)."
    sleep 3
done
